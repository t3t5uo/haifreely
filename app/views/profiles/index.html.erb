<p id="notice"><%= notice %></p>

<br><%= link_to 'New Profile', new_profile_path %>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Freelancer</th>
      <th>Gender</th>
      <th>Height</th>
      <th>Weight</th>
      <th>Bio</th>
      <th>Dateofbirth</th>
      <th>Lineid</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.name %></td>
        <td><%= profile.freelancer %></td>
        <td><%= profile.gender %></td>
        <td><%= profile.height %></td>
        <td><%= profile.weight %></td>
        <td><%= profile.bio %></td>
        <td><%= profile.dateofbirth %></td>
        <td><%= profile.lineid %></td>
        <td><%= profile.location %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
